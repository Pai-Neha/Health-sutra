<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pg3">


    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/robosl_reg"
        android:text="PROFILE"
        android:textColor="#176963"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/use"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.633" />

    <!--<ImageView
        android:id="@+id/imageView4"
        android:layout_width="180dp"
        android:layout_height="188dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.184"
        app:srcCompat="@drawable/user" />-->

    <Button
        android:id="@+id/use"
        android:layout_width="189dp"
        android:layout_height="175dp"
        android:backgroundTint="#D2DFD2"
        android:foreground="@drawable/user"
        android:textColor="#085923"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.154" />

    <TextView
        android:id="@+id/uname"
        android:layout_width="271dp"
        android:layout_height="wrap_content"
        android:background="@drawable/round_cr"
        android:fontFamily="@font/robosl_reg"
        android:gravity="center"
        android:hint="username"
        android:padding="7dp"
        android:textSize="23sp"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView15"
        app:layout_constraintVertical_bias="0.377" />

    <TextView
        android:id="@+id/uemail"
        android:layout_width="274dp"
        android:layout_height="52dp"
        android:background="@drawable/round_cr"
        android:fontFamily="@font/robosl_reg"
        android:gravity="center"
        android:hint="email"
        android:textColor="#000000"
        android:textSize="23sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/uname"
        app:layout_constraintVertical_bias="0.073" />

    <TextView
        android:id="@+id/uadd"
        android:layout_width="271dp"
        android:layout_height="52dp"
        android:background="@drawable/round_cr"
        android:fontFamily="@font/robosl_reg"
        android:gravity="center"
        android:hint="address"
        android:textColor="#000000"
        android:textSize="23sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.521"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/uemail"
        app:layout_constraintVertical_bias="0.107" />

    <TextView
        android:id="@+id/upnumber"
        android:layout_width="271dp"
        android:layout_height="52dp"
        android:background="@drawable/round_cr"
        android:fontFamily="@font/robosl_reg"
        android:gravity="center"
        android:textColor="#000000"
        android:hint="number"
        android:textSize="23sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/uadd"
        app:layout_constraintVertical_bias="0.136" />

</androidx.constraintlayout.widget.ConstraintLayout>