<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".herb2">


    <ImageView
        android:id="@+id/img"
        android:layout_width="344dp"
        android:layout_height="291dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="12dp"
        android:src="@drawable/aloe_vera"></ImageView>

    <TextView
        android:id="@+id/pname"
        android:layout_width="325dp"
        android:layout_height="50dp"
        android:layout_below="@+id/img"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="-16dp"
        android:text="Plant_Name"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="30sp"

        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="421dp"
        android:layout_height="361dp"
        android:layout_above="@+id/pname"
        android:layout_alignStart="@+id/pname"
        android:layout_alignTop="@+id/pname"
        android:layout_alignEnd="@+id/pname"
        android:layout_marginStart="-43dp"
        android:layout_marginTop="38dp"
        android:layout_marginEnd="-44dp"
        android:layout_marginBottom="-480dp"
        android:paddingLeft="25dp"
        android:paddingRight="20dp"
        android:paddingBottom="150sp"
        android:textAlignment="center">

        <TextView
            android:id="@+id/des"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/pname"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="108dp"
            android:paddingLeft="10dp"
            android:paddingRight="20dp"
            android:text="Description"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="normal" />
    </ScrollView>

</RelativeLayout>