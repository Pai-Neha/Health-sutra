<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pg3"
    tools:context=".prakriti.DailyActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        xmlns:android="http://schemas.android.com/apk/res/android">


        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"

        android:orientation="vertical">
    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    android:text="Follow these for a Healthy LifeStyle:"
    android:textSize="27dp"
    android:textStyle="bold"
    android:fontFamily="@font/merriweather"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1. Get up at the Brahmi Muhurta
(90 minutes before sunrise)"
            android:textSize="20dp"
            android:fontFamily="@font/playfair"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2. Eliminate the excreta out"
            android:textSize="20dp"
            android:fontFamily="@font/playfair"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3.Danta Dhavana ( दंतधावन) Brushing the teeth."
            android:textSize="20dp"
            android:fontFamily="@font/playfair"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4. Navana (नावन)A sternutatory.It should be done after medical advice"
            android:textSize="20dp"
            android:fontFamily="@font/playfair"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gandusha -(गण्डूष)Filling the mouth in the morning with oil or medicated water daily and holding for a few minutes without moving it inside the oral cavity(should be done after medical advice"
