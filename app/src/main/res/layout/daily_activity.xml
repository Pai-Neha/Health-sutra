            android:fontFamily="@font/playfair"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6. Abhyanga (अभ्यङ्गः) - Daily application of oil to body"
            android:textSize="20dp"
            android:fontFamily="@font/playfair"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7.व्यायाम - Exercise"
            android:textSize="20dp"
            android:fontFamily="@font/playfair"/>
        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8.Snana (स्नान ) - Bathing"
        android:textSize="20dp"
        android:fontFamily="@font/playfair"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9.Anulepana (अनुलेपन)It means external application of medicated paste over body part "
            android:textSize="20dp"
            android:fontFamily="@font/playfair"/>

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" 10.Rakshanaga vidhi (रक्षोग्ना विधि)- protective measures"
        android:textSize="20dp"
        android:fontFamily="@font/playfair"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="11.pāda prakashalana (पद प्रकाशना)- washing teeth "
            android:textSize="20dp"
            android:fontFamily="@font/playfair"/>

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12.वस्त्रं धारयन्(vastra dharana) - wearing clothes"
        android:textSize="20dp"
        android:fontFamily="@font/playfair"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="13.माल धरणा( māla dharana)- wearing garlands "
            android:textSize="20dp"
            android:fontFamily="@font/playfair"/>

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="14.पदात्रा धावन(padatra dhavana ) - wearing footwear "
        android:textSize="20dp"
        android:fontFamily="@font/playfair"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15.चत्र धावन(chatra dhavana) - having umbrella"
            android:textSize="20dp"
            android:fontFamily="@font/playfair"/>
        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="16.in सायंकाल one should avoid -sleeping
           - having food
           -reading
           -walking
रात्रि भोजनम्‌- having food at night
Then -हस्त प्रपालन ( Hasta prapalana)
         -दन्तधावन (danta dhavana)
         -मुख धावन ( mukha dhavana)
        -शतपद गमना ( shatapada gamana)
       -निद्रा(Nidra) - sleeping"
        android:textSize="20dp"
        android:fontFamily="@font/playfair"/>



